@using BookRazor.Models
@inject Microsoft.Extensions.Options.IOptions<SiteInfo> SiteInfo

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Título dinámico que combina la vista actual y el nombre del sitio -->
    <title>@ViewBag.Title - @SiteInfo.Value.Title</title>

    <!-- Enlace al framework Bootstrap para diseño responsive -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Estilos personalizados para el sitio -->
    <style>
        body {
            background-color: #f9f9fb;
        }

        .navbar {
            background: linear-gradient(90deg, #1b1b1b, #343a40);
        }

        footer {
            background: #1b1b1b;
            color: #aaa;
            text-align: center;
            padding: 1rem;
            margin-top: 3rem;
        }

        h1, h2, h3 {
            color: #222;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            transition: transform 0.2s;
        }

            .card:hover {
                transform: scale(1.02);
            }

        .btn-primary {
            background-color: #6c63ff;
            border-color: #6c63ff;
        }

            .btn-primary:hover {
                background-color: #574bff;
            }
    </style>
</head>
<body>
    <!-- Barra de navegación principal -->
    <nav class="navbar navbar-expand-lg navbar-dark mb-4 shadow-sm">
        <div class="container">
            <!-- Nombre del sitio cargado desde appsettings.json -->
            <a class="navbar-brand fw-bold" href="/">@SiteInfo.Value.Title</a>

            <!-- Menú de navegación -->
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Catalogo">Catálogo</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Catalogo/Recomendaciones">Recomendaciones</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenedor principal donde se carga el contenido de cada vista -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Pie de página con información del sitio -->
    <footer>
        <small>&copy; @DateTime.Now.Year - @SiteInfo.Value.Title | @SiteInfo.Value.Tagline</small>
    </footer>
</body>
</html>
